<%= form_with model: income_and_expenditure, class: "card card-body", local: true do |form| %>
  <%= render "layouts/error_messages", model: form.object %>
  <div class="row">
    <div class="col-sm-6">
      <%= form.select :is_income_and_expenditure, [["支出", "expenditure"],["収入", "income"]], {}, class: "form-control mb-4" %>
    </div>
    <div class="col-sm-6">
      <%= form.select :category_id, categories.map { |category| [category.name, category.id] }, {}, class: "form-control" %>
    </div>
  </div>
  <%= form.text_field :name, class: "form-control mb-4", placeholder: "内容を入力してください" %>
  <div class="row">
    <div class="col-sm-6">
      <%= form.number_field :price, class: "form-control mb-4" %>
    </div>
  </div>
  <div class="text-end">
    <%= form.submit submit_str, class: "btn btn-primary" %>
  </div>
<% end %>