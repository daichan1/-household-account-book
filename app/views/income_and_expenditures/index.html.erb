<h1>収支一覧</h1>

<% if flash[:income_and_expenditures_notice] %>
  <p class="alert alert-primary" role="alert"><%= flash[:income_and_expenditures_notice] %></p>
<% end %>

<div class="text-end">
  <%= link_to "新規作成へ", new_income_and_expenditure_path, class: "btn btn-secondary mb-3" %>
</div>

<ul class="nav nav-pills nav-justified mb-5" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="pills-income-tab" data-bs-toggle="pill" href="#pills-income" role="tab" aria-controls="pills-income" aria-selected="true">収入</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-expenditure-tab" data-bs-toggle="pill" href="#pills-expenditure" role="tab" aria-controls="pills-expenditure" aria-selected="false">支出</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-income" role="tabpanel" aria-labelledby="pills-income-tab">
    <%= render "chart_table", { objects: @incomes, chart: @income_chart } %>
  </div>
  <div class="tab-pane fade" id="pills-expenditure" role="tabpanel" aria-labelledby="pills-expenditure-tab">
    <%= render "chart_table", { objects: @expenditures, chart: @expenditure_chart } %>
  </div>
</div>