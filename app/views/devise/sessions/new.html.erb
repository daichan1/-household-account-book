<div class="login-form">
  <%= form_with model: @user, url: user_session_path, local: true, class: "card card-body text-center" do |form| %>
    <h2 class="mb-3">ログイン</h2>
    <div>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control form-input" %>
    </div>

    <div class="mb-3">
      <%= form.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= form.check_box :remember_me %>
        <%= form.label :remember_me %>
      </div>
    <% end %>

    <div>
      <%= form.submit "ログイン", class: "btn btn-primary mb-3" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
