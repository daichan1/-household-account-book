<div class="user-form">
  <%= form_with model: @user, url: user_password_path, local: true, class: "card card-body text-center" do |form| %>
    <%= render "devise/shared/error_messages", resource: @user %>
    
    <h2>パスワード再設定</h2>
    
    <div class="mb-3">
      <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control user-form-input" %>
    </div>

    <div class="mb-3">
      <%= form.submit "メールを送信し再設定する", class: "btn btn-primary mb-3" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
